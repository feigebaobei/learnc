{
	"version": "2.0.0",
	"tasks": [
		{
			// "type": "cppbuild",
			"type": "process",
			"label": "C/C++: gcc 生成活动文件",
			"command": "/usr/bin/gcc",
			"args": [
				"-g", // 编译命令
				"${workspaceFolder}/hello.c", // 当前workspace下的hello.c文件
				"-o", // 输出文件命令
				"${workspaceFolder}/hello.o" // 生成的可执行文件的路径及名称
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: /usr/bin/gcc"
		}
	]
}